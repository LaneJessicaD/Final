<% dance_moves = Dance.find_by("id" => params["id"]) %>

<h1>Add a New Dance Move</h1>

<form action="/dance" method="post">

 <p>
    <label>What is the name of the move?</label>
    <input type="text" name="move_name" value="<%= dance_moves["move"] %>">
  </p>

<p>
    <label>How difficult is this move?</label>
    <input type="integer" name="diffi" value="<%= dance_moves["difficulty"] %>">
  </p>

  <p>
    <label>Do you have a link to a photo?</label>
    <input type="text" name="p_url" value="<%= dance_moves["picture_url"] %>">
  </p>

<p>
    <label>Do you have a link to a video?</label>
    <input type="text" name="v_url" value="<%= dance_moves["video_url"] %>">
  </p>

  <input type="submit"> or <a href="/dance">Cancel</a>

</form>
